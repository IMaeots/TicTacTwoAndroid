<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_bar_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    android:paddingStart="@dimen/content_area_top_padding"
    android:paddingEnd="@dimen/content_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/default_horizontal_padding"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_bar_item_length"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_settings"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/default_horizontal_padding"
            android:contentDescription="@string/settings_desc" />

        <ImageButton
            android:id="@+id/onboardingButton"
            android:layout_width="@dimen/top_bar_item_length"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_app_logo_foreground"
            android:layout_weight="1"
            android:contentDescription="@string/onboarding_logo_desc" />

        <ImageButton
            android:id="@+id/statsButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_bar_item_length"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_stats"
            android:padding="8dp"
            android:layout_marginTop="@dimen/default_horizontal_padding"
            android:contentDescription="@string/stats_desc" />

    </LinearLayout>

</com.google.android.material.appbar.MaterialToolbar>
